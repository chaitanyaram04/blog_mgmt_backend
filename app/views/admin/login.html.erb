<h1 style="text-align: center; font-family: Arial, sans-serif; color: #333;">Admin Login</h1>

<% if flash[:alert] %>
  <p style="color: red; text-align: center; font-weight: bold;"><%= flash[:alert] %></p>
<% end %>

<div style="max-width: 400px; margin: 50px auto; padding: 20px; border: 1px solid #ddd; border-radius: 8px; background-color: #f9f9f9; box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);">
  <%= form_with url: home_admin_validate_path, method: :post, local: true do |form| %>
    <div style="margin-bottom: 15px;">
      <%= form.label :email, "Email", style: "display: block; margin-bottom: 5px; font-weight: bold;" %>
      <%= form.text_field :email, style: "width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 4px;" %>
    </div>
    <div style="margin-bottom: 15px;">
      <%= form.label :password, "Password", style: "display: block; margin-bottom: 5px; font-weight: bold;" %>
      <%= form.password_field :password, style: "width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 4px;" %>
    </div>
    <div style="text-align: center;">
      <%= form.submit "Login", style: "padding: 10px 20px; color: #fff; background-color: #007BFF; border: none; border-radius: 4px; cursor: pointer;" %>
    </div>
  <% end %>
</div>
